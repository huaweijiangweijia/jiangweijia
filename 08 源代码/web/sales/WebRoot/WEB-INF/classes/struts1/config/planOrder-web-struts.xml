<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

	<action-mappings>
		<action path="/planOrder/listAction" scope="request" validate="false"></action>
		<action path="/planOrder/orderDetail" scope="request" validate="false"></action>
		<action path="/planOrder/orderDetailsList" scope="request" validate="false"></action>
		<action path="/planOrder/suppliersInforList" scope="request" validate="false"></action>
		<action path="/planOrder/addOrder" scope="request" validate="false"></action>
		<action path="/planOrder/updateOrder" scope="request" validate="false"></action>
		<action path="/planOrder/deleteOrder" scope="request" validate="false"></action>
		<action path="/planOrder/deleteOrderDetail" scope="request" validate="false"></action>
		<action path="/planOrder/productList" scope="request" validate="false"></action>
		<action path="/planOrder/planList" scope="request" validate="false"></action>
		<action path="/planOrder/submitAudit" scope="request" validate="false"></action>
		<action path="/planOrder/placeOrder" scope="request" validate="false"></action>
		<action path="/planOrder/orderExcel" scope="request" validate="false"></action>
	</action-mappings>

	<controller>
		<set-property property="processorClass"
			value="org.springframework.web.struts.DelegatingRequestProcessor" />
	</controller>
		
</struts-config>
